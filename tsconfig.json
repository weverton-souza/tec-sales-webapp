{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@app/*": [
        "src/app/"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ],
      "@core/*": [
        "src/app/core/*"
      ],
      "@services/*": [
        "src/app/shared/services/*"
      ],
      "@states/*": [
        "src/app/shared/states/*"
      ],
      "@views/*": [
        "src/app/views/*"
      ],
      "@models/*": [
        "src/app/shared/interfaces/*"
      ],
      "@environments/*": [
        "src/environments/*"
      ]
    }
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "allowSyntheticDefaultImports": true,
  }
}